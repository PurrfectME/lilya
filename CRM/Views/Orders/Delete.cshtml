@model CRM.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить этот заказ?</h3>
<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер заказа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Статус
        </dt>
        <dd class = "col-sm-10">
            @switch (Model.Status)
            {
                case OrderStatus.Accepted:
                    <div>Активный</div>;
                    break;
                case OrderStatus.Completed:
                    <div>Исполнен</div>;
                    break;
                case OrderStatus.InProgress:
                    <div>В обработке</div>;
                    break;
            }
        </dd>
        <dt class = "col-sm-2">
            Дата создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
         <dt class = "col-sm-2">
            Файлы
        </dt>
        <dd class = "col-sm-10">
            @if(Model.Files == null || Model.Files.Count == 0)
            {
                <span>Нет файлов</span>
            }
            else
            {
                @foreach (var item in Model.Files)
                {
                    @Html.ActionLink(item.Filename, "DownloadFile", "Orders", new { fileId = item.Id }, new { @target = "_blank" });
                    <br />
                }
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Заказы</a>
    </form>
</div>
